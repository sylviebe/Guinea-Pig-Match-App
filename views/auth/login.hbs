<h2>Pets Of Berlin</h2>
<h2>Login</h2>

<form action="/auth/login" method="POST" id="form-container">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br>
  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button class="button-login">
    <a href="/auth/userPage">Login</a>

    <p class="account-message">
      Don't have an account yet?
      <button class="button-signup">
        <a class="button1" href="/auth/signup">Signup</a>
    </p>
</form>